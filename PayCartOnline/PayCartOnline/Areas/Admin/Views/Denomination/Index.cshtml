<script>
    const deleted = (id) => {

        var r = confirm("Do you want to delete");
        if (r == true) {
            $.ajax({
                url: '/Admin/Denomination/Delete',
                type: 'POST',
                data: {
                    id: id
                },
                success: function (response) {
                    alert('Success')
                    location.reload();
                }
            });

        }
    }
</script>