@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var index = 1;
    System.Globalization.CultureInfo culture = new System.Globalization.CultureInfo("en-US");
}
<head>
    <link href="https://cdn.datatables.net/1.10.23/css/jquery.dataTables.min.css" />
</head>
<div class="content-wrapper" style=" background-color: white; ">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">

                    <ol class="breadcrumb float-sm-left">

                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">
                            <a href="/Admin">Manage Denomination</a>
                        </li>
                    </ol>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">

                        <a href="/Admin/Denomination/Create" class="btn btn-success" style="margin-right:5px"><i class="fa fa-plus"></i> Add</a>

                        <a id="btnGroupDrop1" class="btn btn-light" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Back To
                        </a>

                        <!--test-->
                        <!-- The Modal -->
                        <!--test-->
                    </ol>
                </div><!-- /.col -->
            </div>
            <table class="table table-striped ml-2 mr-2" id="table1">
                <thead>
                    <tr>
                        <th scope="col">STT</th>
                        <th scope="col">Price</th>
                        <th scope="col">Status</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.deno)
                    {

                        <tr>
                            <th scope="row">@(index++)</th>

                            <td> @String.Format(culture, "{0:N0}", @item.Price) VND</td>
                            <td>
                                @if (item.Status == "On")
                                {
                                    <span class="badge badge-success">@item.Status</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">@item.Status</span>
                                }
                            </td>

                            <td>
                                <button type="button" id="Update" onclick="HandleUpdate(@item.ID)" class="btn btn-success"><i class="fas fa-edit"></i></button>
                                <button type="button" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
                            </td>

                        </tr>
                    }

                </tbody>
            </table>


        </div>
    </div>
</div>
